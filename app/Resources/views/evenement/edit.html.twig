{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-12 col-xs-12">
                {% for evenement in evenements %}
                    <p>
                        <a href="{{ path('evenement_edit',{'id':evenement.id}) }}">{{ evenement.titre }} - {{ evenement.date|date("m/d/Y") }} <input class="btn btn-success" type="submit" value="Modifier"/> </a>
                        <a href="{{ path('evenement_delete', {'id':evenement.id}) }}"> <input class="btn btn-success" type="submit" value="Supprimer"/> </a>
                    </p>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}