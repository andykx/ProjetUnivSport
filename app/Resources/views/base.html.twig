<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %} UnivSport {% endblock %}</title>
    {% block stylesheets %}

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/projetunivsport/web/app_dev.php/">UnivSports</a>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("ROLE_USER") %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="glyphicon glyphicon-list"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/projetunivsport/web/app_dev.php/index">{{ 'look_event' | trans }}</a></li>
                            <li><a href="/projetunivsport/web/app_dev.php/add">{{ 'add_event' | trans }}</a></li>
                            <li><a href="/projetunivsport/web/app_dev.php/list">{{ 'modify_event' | trans }}</a></li>
                            <li><a href="/projetunivsport/web/app_dev.php/list">{{ 'delete_event' | trans }}</a></li>
                        </ul>
                </li>
                {% endif %}
            </ul>
        </div>

        <ul class="nav navbar-nav navbar-right">
            {% if is_granted("ROLE_USER") %}
                <li>
                    <a href="/projetunivsport/web/app_dev.php/profile">{{ 'my_profile' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('fos_user_security_logout') }}">{{'logout'|trans}}</a>
                </li>
                <li class=""dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-globe"></span> <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('setlocale',{'locale':'fr'}) }}">Fran√ßais</a></li>
                        <li><a href="{{ path('setlocale',{'locale':'en'}) }}">Anglais</a></li>
                    </ul>
                </li>
            {% else %}
                <li><a href="/projetunivsport/web/app_dev.php/register"><span class="glyphicon glyphicon-user"></span> {{ 'sign_up'|trans }}</a></li>
                <li><a href="/projetunivsport/web/app_dev.php/login"><span class="glyphicon glyphicon-log-in"></span> {{ 'login'|trans }}</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container" style="margin-top:80px">
    <div class="row">
        <div class="col-sm-9">
            {% block body %}
                <div>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </div>

            {% endblock %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 footer">
            {% block footer %}

            {% endblock %}

        </div>
    </div>
</div>

{% block javascripts %}
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>
