{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ wo_render_breadcrumbs() }}
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3> {{'event.search'|trans}} </h3>
                        <form action="{{path('search_results')}}"  method="get" >
                            <div class="form-group">
                                <label for="lieu"> {{'event.lieu'|trans}} </label>
                                <input type="text" class="form-control" id="lieu" name = "lieu">
                            </div>
                            <div class="form-group">
                                <label for="categorie"> {{'event.categorie'|trans}} </label>
                                <select class="form-control" id="categorie" name = "categorie">
                                    <option> Concours </option>
                                    <option> Tournoi </option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-default"> {{'event.btnsearch'|trans}} </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}